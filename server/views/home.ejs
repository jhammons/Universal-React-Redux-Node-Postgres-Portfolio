<%- include('header') -%>

<div class="row">
    <div class="col-md-4">
        <h3>Rooms</h3>
        <div id="rooms" class="list-group"></div>
    </div>
    <div class="col-md-8">
        <h3 id="roomName"></h3>
        <textarea id="messages" rows="15" class="form-control"></textarea>
        <button id="delete" class="btn btn-default">Delete All Messages</button>
        <h3>Post A Message</h3>
        <textarea id="message" rows="2" class="form-control"></textarea>
        <button id="post" type="submit" class="btn btn-primary">Post</button>
    </div>
</div>

<script src="/jquery.min.js" type="text/javascript"></script>
<script src="/home.js" type="text/javascript"></script>

