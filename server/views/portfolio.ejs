<%- include('header', {title: title, auth: auth}) -%>

<h1>Portfolio Items:</h1>
<div><a href="portfolio/add">
        <button class="btn btn-primary">Add new item</button></a></div><br/><br/>

<% if (items.length) { %>

<table class="portfolio-list table table-striped table-responsive">
    <tbody>
    <tr>
        <th>&nbsp;</th>
        <th>item</th>
        <th>image</th>
        <th>sort</th>
        <th>&nbsp;</th>
    <% items.forEach(function(item) { %>
    <tr>
        <td style="">
            <a href="/admin/portfolio/<%= item.id %>"><i class="fa fa-pencil"></i></a>
        </td>
        <td style="width: 65%"><%= item.title %></td>
        <td><img src="/images/portfolio/<%= item.main_image %>" style="max-width: 200px; height: auto;" /></td>
        <td><%= item.sort %></td>
        <td style="">
            <a href="/admin/portfolio/delete/<%= item.id %>" class="confirm-delete"><i class="fa fa-remove"></i></a>
        </td>
    </tr>
    <% }); %>
    </tr>
    </tbody>
</table>

<% } else { %>

<p>No items found.</p>

<% } %>

<%- include('footer') -%>